<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="380.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.luxusrechnerjava.MainViewController">
    <children>
        <HBox alignment="CENTER" prefHeight="380.0" prefWidth="560.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                    <content>
                        <TableView fx:id="calculationOutputTable" prefHeight="358.0" prefWidth="270.0">
                            <placeholder>
                                <Label text="Noch keine Berechnung ausgeführt"/>
                            </placeholder>
                            <columns>
                                <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="135.0"
                                             sortable="false" text="Beschreibung"/>
                                <TableColumn fx:id="amountColumn" editable="false" prefWidth="135.0" sortable="false"
                                             text="Bertag"/>
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
                <VBox alignment="CENTER" prefHeight="360.0" prefWidth="270.0" spacing="10.0">
                    <children>
                        <VBox alignment="CENTER" spacing="1.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" text="Kontostand"/>
                                        <TextField fx:id="balanceInputField" onAction="#onClickCalculateButton"
                                                   prefWidth="180.0" promptText="Kontostand in €"/>
                                    </children>
                                </HBox>
                                <Label fx:id="balanceErrorLabel" alignment="CENTER" prefWidth="270.0" text="Fehler"
                                       textFill="RED"/>
                                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" text="Extra Abzüge"/>
                                        <TextField fx:id="deductionsInputField" onAction="#onClickCalculateButton"
                                                   prefWidth="180.0" promptText="Abzüge in €"/>
                                    </children>
                                </HBox>
                                <Label fx:id="deductionsErrorLabel" alignment="CENTER" prefWidth="270.0" text="Fehler"
                                       textFill="RED"/>
                                <Button fx:id="calculateButton" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#onClickCalculateButton" prefWidth="130.0"
                                        text="Luxusgeld berechnen"/>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="2.0">
                            <children>
                                <Label text="Zeitraum"/>
                                <Label fx:id="timespanOutputLabel" alignment="CENTER" prefWidth="270.0"
                                       text="Anfang - Ende"/>
                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <DatePicker fx:id="timespanBeginingDatePicker" promptText="Letzte Zahlung"/>
                                        <DatePicker fx:id="timespanEndDatePicker" promptText="Nächste Zahlung"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <Button fx:id="confirmTimespanButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#onClickConfirmTimeSpanButton" prefWidth="130.0" text="Zeitraum Bestätigen"/>
                        <Button fx:id="expensesButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#onClickExpensesButton" prefWidth="130.0" text="Ausgaben bearbeiten"/>
                        <Button fx:id="fixedCostButton" mnemonicParsing="false" onAction="#onClickFixedCostButton"
                                prefWidth="130.0" text="Fixkosten berarbeiten"/>
                        <Button fx:id="configButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#onClickConfigButton" prefWidth="130.0" text="Einstellungen"/>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</AnchorPane>
